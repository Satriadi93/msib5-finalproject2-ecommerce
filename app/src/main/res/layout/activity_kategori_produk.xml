<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KategoriProdukActivity"
    android:padding="8dp">

    <TextView
        android:id="@+id/namaKategori"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:text="Kategori Produk"
        android:textColor="@color/red"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/layoutKategoriProduk2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/namaKategori">

        <ImageButton
            android:id="@+id/btnKategoriProduk1"
            android:layout_gravity="center"
            android:src="@drawable/button_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackgroundBorderless"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/kategori1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kategori1"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutKategoriProduk3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutKategoriProduk2"
        >

        <ImageButton
            android:id="@+id/btnKategoriProduk2"
            android:layout_gravity="center"
            android:src="@drawable/button_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackgroundBorderless"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/kategori2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kategori2"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_gravity="center"
            />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>