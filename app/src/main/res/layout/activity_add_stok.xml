<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pinkslate"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/desc_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="@string/add_stok"
        android:textColor="@color/pink"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="303dp"
        android:layout_height="46dp"
        android:layout_marginTop="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/back_input"
        app:layout_constraintTop_toBottomOf="@+id/desc_login" />

    <Spinner
        android:id="@+id/kategori_barang"
        android:layout_width="273dp"
        android:layout_height="46dp"
        android:background="@android:color/transparent"
        android:entries="@array/kategoriBarang_array"
        android:prompt="@string/dropdown_kategoriBarang"
        app:layout_constraintBottom_toBottomOf="@+id/imageView15"
        app:layout_constraintEnd_toEndOf="@id/imageView15"
        app:layout_constraintStart_toStartOf="@+id/imageView15"
        app:layout_constraintTop_toTopOf="@+id/imageView15"
        app:layout_constraintVertical_bias="0.473"
        />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="303dp"
        android:layout_height="46dp"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/back_input"
        app:layout_constraintTop_toBottomOf="@+id/imageView15" />

    <EditText
        android:id="@+id/nama_barang"
        android:layout_width="273dp"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="@string/nama_barang"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintEnd_toEndOf="@id/imageView5"
        app:layout_constraintStart_toStartOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="@+id/imageView5"
        app:layout_constraintVertical_bias="0.473"
        android:autofillHints="" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="303dp"
        android:layout_height="46dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/back_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <EditText
        android:id="@+id/brand"
        android:layout_width="273dp"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="@string/brand"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        app:layout_constraintEnd_toEndOf="@+id/imageView7"
        app:layout_constraintStart_toStartOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/imageView7"
        app:layout_constraintVertical_bias="0.473"
        android:autofillHints="" />

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="303dp"
        android:layout_height="46dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/back_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView7" />

    <EditText
        android:id="@+id/jumlah_barang"
        android:layout_width="273dp"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="@string/jumalah_barang"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/imageView18"
        app:layout_constraintEnd_toEndOf="@+id/imageView18"
        app:layout_constraintStart_toStartOf="@+id/imageView18"
        app:layout_constraintTop_toTopOf="@+id/imageView18"
        app:layout_constraintVertical_bias="0.473"
        android:autofillHints="" />

    <ImageView
        android:id="@+id/imageView21"
        android:layout_width="303dp"
        android:layout_height="46dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/back_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView18" />

    <EditText
        android:id="@+id/harga_barang"
        android:layout_width="273dp"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:hint="@string/harga_barang"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/imageView21"
        app:layout_constraintEnd_toEndOf="@+id/imageView21"
        app:layout_constraintStart_toStartOf="@+id/imageView21"
        app:layout_constraintTop_toTopOf="@+id/imageView21"
        app:layout_constraintVertical_bias="0.473"
        android:autofillHints=""/>

    <TextView
        android:id="@+id/errorTextAddStok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/save"
        app:layout_constraintBottom_toTopOf="@+id/save"
        android:text=""
        android:textColor="@color/red"
        android:textSize="13sp"
        />

    <ImageButton
        android:id="@+id/save"
        android:layout_width="309dp"
        android:layout_height="58dp"
        android:layout_marginTop="35dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/tombol_login"
        android:src="@drawable/buttonsave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView21"
        app:layout_constraintVertical_bias="0.473" />


</androidx.constraintlayout.widget.ConstraintLayout>